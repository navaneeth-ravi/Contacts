<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nav_contacts">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:name=".ContactMain"
        android:icon="@drawable/contacts_24"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavContacts">
        <provider
            android:name=".data.db.local_db.MyContentProvider"
            android:authorities="com.nav.contact.provider"
            android:enabled="true"
            android:exported="false"/>

        <activity
            android:name=".presentation.activity.CreateAndEditContactActivity"
            android:exported="false"
            android:theme="@style/Theme1" />
        <activity
            android:name=".presentation.activity.ContactDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme1" />
        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>